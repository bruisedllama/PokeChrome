{
    "manifest_version": 2,
    "name": "Pok√©Chrome",
    "version": "1.0",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "jquery-3.3.1.min.js",
                "pokemonscript.js"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "icons": {
        "128": "icon.png"
    }
}